<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE MEEGO_IM_TOOLBAR_WIDGET SYSTEM 'ImToolbarDTD.dtd'>
<input-method version="1" visible="true" refuse="_close">
    <toolbar>
        <items>
            <button name="test1" group="group1" showon="always" alignment="right" icon="icon1" text="text1" text_id="id1" highlighted="true">
                <actions>
                    <sendstring string="sendstring1" />
                    <hidegroup group="group3" />
                </actions>
            </button>
            <button name="test2" size="50" group="group2" showon="selectedtext" alignment="center" icon="icon2" text="text2" text_id="id2" toggle="true">
                <actions>
                    <copy />
                    <showgroup group="group3" />
                    <sendkeysequence keysequence="Ctrl+C" />
                </actions>
            </button>
            <button name="test3" group="group3" showon="always" alignment="left" content-alignment="center" icon_id="icon3" text="text3" text_id="id3"  enabled="false">
                <actions>
                    <paste />
                </actions>
            </button>
            <label name="test4" text="text4" alignment="right" content-alignment="left">
            </label>
            <button name="test5" text="test5">
                <actions>
                    <paste />
                </actions>
            </button>
            <label name="test6" text="text6" alignment="center" content-alignment="right"/>
            <label name="test7" text="text7" alignment="left" content-alignment="center"/>
            <label name="test8" text="text8" />
        </items>
        <layout orientation="landscape">
            <item name="test1" />
            <item name="test2" />
            <item name="test3" />
            <item name="test4" />
            <item name="test6" />
            <item name="test7" />
            <item name="test8" />
        </layout>
        <layout orientation="portrait">
            <item name="test2" />
            <item name="test3" />
            <item name="test4" />
            <item name="test5" />
        </layout>
    </toolbar>
</input-method>

