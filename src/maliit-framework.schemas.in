<?xml version="1.0" encoding="utf-8"?>
<gconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/maliit/plugins/hardware</key>
      <applyto>/maliit/plugins/hardware</applyto>
      <owner>meegotouch</owner>
      <type>string</type>
      <default>@M_IM_DEFAULT_HW_PLUGIN@</default>
      <locale name="C">
        <short>Plugin name for hardware keyboard</short>
        <long>Plugin name for hardware keyboard</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/maliit/accessoryenabled</key>
      <applyto>/maliit/accessoryenabled</applyto>
      <owner>meegotouch</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Whether input hardware accessory (eg. Bluetooth pen) is enabled.</short>
        <long>Whether input hardware accessory (eg. Bluetooth pen) is enabled.</long>
      </locale>
    </schema>

    <schema>
     <key>/schemas/maliit/multitouch/enabled</key>
     <applyto>/maliit/multitouch/enabled</applyto>
     <owner>meegotouch</owner>
     <type>bool</type>
     <default>@M_IM_ENABLE_MULTITOUCH@</default>
     <locale name="C">
      <short>Whether multitouch is enabled</short>
      <long>Whether multitouch is enabled</long>
     </locale>
    </schema>

    <schema>
      <key>/schemas/maliit/onscreen/enabled</key>
      <applyto>/maliit/onscreen/enabled</applyto>
      <owner>meegotouch</owner>
      <type>list</type>
      <list_type>string</list_type>
      <default>[@M_IM_DEFAULT_PLUGIN@:@M_IM_DEFAULT_SUBVIEW@]</default>
      <locale name="C">
        <short>A list of enabled onscreen plugin/subviews</short>
        <long>A list of enabled onscreen plugin/subviews as a flattened list of pairs (plugin identifier, subview identifier)</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/maliit/onscreen/active</key>
      <applyto>/maliit/onscreen/active</applyto>
      <owner>meegotouch</owner>
      <type>string</type>
      <default>[@M_IM_DEFAULT_PLUGIN@:@M_IM_DEFAULT_SUBVIEW@]</default>
      <locale name="C">
        <short>The current active onscreen plugin/subview</short>
        <long>The current active onscreen plugin/subview as a pair of (plugin identifier, subview identifier)</long>
      </locale>
    </schema>
  </schemalist>
</gconfschemafile>
